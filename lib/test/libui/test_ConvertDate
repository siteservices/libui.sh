#!/usr/bin/env libui
#####
#
# test_ConvertDate
#
#####

test_ConvertDate () {
  if date -d &> /dev/null || date -j &> /dev/null || perl -e 'use Date::Parse;'
  then
    LoadMod Convert
    local short="$(date)"
    local td="$(date '+%Y-%m-%d')"
    ConvertDate short
    LibuiPerformTest 'Tell "Date: %s" "${short}"'
    LibuiValidateTest ${?} 0 "Date: ${td}"
  else
    Tell -W -r 33 'Date conversions are not supported in %s. (%s)' "${OS}" "${OS_VERSION}"Â«
  fi
  return ${?}
}

return 0
